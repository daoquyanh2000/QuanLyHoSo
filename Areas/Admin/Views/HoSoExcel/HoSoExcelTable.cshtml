@model IEnumerable<QuanLyHoSo.ViewModel.ViewHoSo>
<table class="table table-striped table-light table-bordered w-100 table-hover">
    <tr>
        <th>
            Tên thư mục
        </th>
        <th>
            Tiêu đề
        </th>
        <th>
            Mã hồ sơ
        </th>
        <th>
            Ký hiệu
        </th>
        <th>
            Tên danh mục
        </th>
        <th>
            Tên kho
        </th>
        <th>
            Tên ngăn
        </th>
        <th>
            Tên loại hồ sơ
        </th>
        <th>
            Mô tả
        </th>
        <th>
            Thời gian lưu trữ
        </th>
        <th>
            Thời hạn bảo quản
        </th>
        <th>
            Chức năng
        </th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @item.TenThuMuc
    </td>
    <td>
        @item.TieuDe
    </td>
    <td>
        @item.MaHoSo
    </td>
    <td>
        @item.KyHieu
    </td>
    <td>
        @item.TenDanhMuc
    </td>
    <td>
        @item.TenKho
    </td>
    <td>
        @item.TenNgan
    </td>
    <td>
        @item.TenLoaiHoSo
    </td>
    <td>
        @item.MoTa
    </td>
    <td>
        @item.ThoiGianLuuTru
    </td>
    @if (item.ThoiHanBaoQuan == "0")
    {
        <td>
            Vĩnh viễn
        </td>
    }
    else
    {
        <td>
            @item.ThoiHanBaoQuan
        </td>
    }
    <td>
        <div class="btn-group btn-group-sm" role="group" aria-label="Basic mixed styles example">
            <button type="button" class="btn btn-outline-secondary" onclick="ViewThanhPhanExcel(@("'" + item.TenThuMuc +"'"))">
                <span>Xem thành phần</span>
            </button>
        </div>
    </td>
</tr>
    }
</table>