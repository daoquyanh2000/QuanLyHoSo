@model IEnumerable<QuanLyHoSo.ViewModel.ViewThanhPhanHoSo>
<table class="table table-striped table-light table-bordered w-100 table-hover">
    <tr>
        <th>Tên thư mục</th>
        <th>Tiêu đề thành phần</th>
        <th>Mã thành phần</th>
        <th>Loại thành phần</th>
        <th>Ký hiệu</th>
        <th>Chú thích</th>
        <th>Chức năng</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.TenThuMuc</td>
        <td>@item.TieuDe</td>
        <td>@item.MaThanhPhan</td>
        <td>@item.TenLoaiThanhPhan</td>
        <td>@item.KiHieu</td>
        <td>@item.ChuThich</td>
        <td>
            <div class="btn-group btn-group-sm" role="group" aria-label="Basic mixed styles example">
                <button type="button" class="btn btn-outline-secondary" onclick="ViewPDFExcel(@("'" + item.TenThuMuc +"'"))">
                    <span>Xem nội dung thành phần</span>
                </button>
            </div>
        </td>
    </tr>
    }
</table>