@model IEnumerable<QuanLyHoSo.ViewModel.ViewDanhMuc>
<table class="table table-striped table-light table-bordered DisplayName w-100 table-hover">
    <tr>
        <th>
            Tên danh mục
        </th>
        <th>
            Mã danh mục
        </th>
        <th>
            Tên danh mục cha
        </th>
        <th>
            Trạng thái
        </th>
        <th>
            Mô tả
        </th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @item.TenDanhMuc
        </td>
        <td>
            @item.MaDanhMuc
        </td>
        <td>
            @item.TenDanhMucCha
        </td>
        @if (@item.TrangThai == 1)
    {
        <td>
            <div class="form-check form-switch">
                <input class="form-check-input excelCheckbox" type="checkbox" checked>
            </div>
        </td>
    }
    else
    {
        <td>
            <div class="form-check form-switch">
                <input class="form-check-input excelCheckbox" type="checkbox">
            </div>
        </td>
    }
        <td>
            @item.MoTa
        </td>
    </tr>
    }
</table>