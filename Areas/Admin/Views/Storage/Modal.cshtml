<form action="" id="userForm">
    <div class="row my-2">
        <div class="col-12 fw-bold fst-italic">
            (*) Thông tin bắt buộc
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label for="TenKho" class="form-label">Tên kho (*)</label>
                <input class="form-control" id="TenKho" name="TenKho">
            </div>
            <div class="form-group">
                <label for="MaKho" class="form-label">Mã kho (*)</label>
                <input class="form-control" id="MaKho" type="text" name="MaKho">
            </div>

        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label class="form-label" for="IDKhoCha">Kho cha (*)</label>
                <select class="form-select" id="IDKhoCha" name="IDKhoCha">
                    <option value="0">Khóa</option>
                    <option value="1">Mở</option>
                </select>
            </div>
            <div class="form-group">
                <label class="form-label" for="TrangThai">Trạng thái (*)</label>
                <select class="form-select" id="TrangThai" name="TrangThai">
                    <option value="0">Khóa</option>
                    <option value="1">Mở</option>
                </select>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="form-group">
                <label for="KichThuoc" class="form-label">Kích thước kho (*)</label>
                <input class="form-control" id="KichThuoc" type="number" name="KichThuoc">
            </div>
        </div>
        <div class="col-lg-12">
            <div class="form-group">
                <label for="MoTa" class="form-label">Mô tả</label>
                <textarea class="form-control" id="MoTa" name="MoTa"
                          rows="5"></textarea>
            </div>
        </div>
    </div>
</form>