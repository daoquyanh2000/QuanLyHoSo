@model IEnumerable<QuanLyHoSo.Models.DataNhanVien>
<table class="table table-striped table-light table-bordered DisplayName w-100 table-hover">
    <tr>
        <th>
            Họ tên
        </th>
        <th>
            Tên tài khoản
        </th>
        <th>
            Mật khẩu
        </th>
        <th>
            Mã kiểu người dùng
        </th>
        <th>
            Trạng thái
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Email
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            Ảnh đại diện
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Quê quán
        </th>
        <th>
            Công ty
        </th>
        <th>
            Chức vụ
        </th>
        <th>
            Tiểu sử
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td style="max-width:200px">
                @item.HoTen
            </td>
            <td>
                @item.UserName
            </td>
            <td>
                @item.Password
            </td>
            <td>
                @item.TenQuyen
            </td>
            @if (@item.TrangThai == 1)
            {
                <td>
                    <div class="form-check form-switch">
                        <input class="form-check-input excelCheckbox" type="checkbox" checked>
                    </div>
                </td>
            }
            else
            {
                <td>
                    <div class="form-check form-switch">
                        <input class="form-check-input excelCheckbox" type="checkbox">
                    </div>
                </td>
            }
            <td>
                @item.SDT
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.NgaySinh
            </td>
            <td>
                <img id="" src="@item.AnhDaiDien" alt="" style="max-width:100px">
            </td>
            @if (@item.GioiTinh == 1.ToString())
            {
                <td>Nữ</td>
            }
            else
                if (@item.GioiTinh == 0.ToString())
            {
                <td>Nam</td>
            }
            else
            {
                <td></td>
            }

            <td>
                @item.DiaChi
            </td>
            <td>
                @item.QueQuan
            </td>
            <td>
                @item.CongTy
            </td>
            <td>
                @item.ChucVu
            </td>
            <td>
                @item.TieuSu
            </td>
        </tr>
    }
</table>

